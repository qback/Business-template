.reason
	padding-top 51px
	padding-right 50px
	padding-left 36px
	width 100%
	color #000

	&__number
		position relative
		margin-bottom 29px
		display inline-block
		font-family $raleway
		font-size 60px
		font-weight 300
		line-height 60px
		letter-spacing 2.5px

		&::before
			position absolute
			top 58%
			left 50%
			width 104px
			height 1px
			content ''
			background-color #000
			opacity .2
			transform translateX(-50%)

	&__title
		margin-bottom 35px
		margin-left 69px
		font-family $helvetica-cyr
		font-size 36px
		font-weight 300
		line-height 24px
		letter-spacing 2.5px
		word-spacing -1.5px

	&__desc
		margin-left 72px
		font-family $helvetica-cyr
		font-size 14px
		font-weight 300
		line-height 24px
		letter-spacing .4px
