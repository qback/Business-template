.reason
	padding-top em(51)
	padding-right em(50)
	padding-left em(36)
	color #000

	+below(700px)
		padding-right 0

	&__number
		position relative
		margin-bottom em(29, 60)
		display inline-block
		font-family $raleway
		font-size em(60)
		font-weight 300
		line-height (60/60)
		letter-spacing em(2.5, 60)

		&::before
			position absolute
			top 58%
			left 50%
			width em(104, 60)
			height 1px
			content ''
			background-color #000
			opacity .2
			transform translateX(-50%)

	&__title
		margin-bottom em(35, 36)
		margin-left em(69, 36)
		font-family $helvetica-cyr
		font-size em(36)
		font-weight 300
		line-height em(24, 36)
		letter-spacing em(2.5, 36)
		word-spacing em(-1.5, 36)

	&__desc
		margin-left em(72, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 300
		line-height (24/14)
		letter-spacing em(.4, 14)
