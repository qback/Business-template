.company
	padding-top em(66)
	padding-bottom em(63)
	background-color #fbfdfe

	+below(450px)
		font-size rem(12)

	&__wrapper
		wrapper()

		+below(450px)
			padding-x 10px

	&__figure
		margin-right prc(45/1100)
		display inline-block
		width prc(540/1100)
		max-width em(540)
		vertical-align top

		+below(1140px)
			margin-right prc(33/1100)

		+below(1000px)
			margin 0 auto
			display block
			width auto

	&__img
		width 100%
		max-width 100%
		height auto


	&__text
		padding-top em(30)
		padding-right prc(96/1100)
		padding-left prc(19/1100)
		display inline-block
		width prc(510/1100)
		max-width em(510)
		vertical-align top


		+below(1000px)
			margin 0 auto
			padding-top em(51)
			padding-right em(50)
			padding-left em(36)
			display block
			width auto

		+below(700px)
			padding-right em(10)



	&__number
		position relative
		margin-bottom em(29, 60)
		display inline-block
		font-family $raleway
		font-size em(60)
		font-weight 300
		line-height (60/60)
		letter-spacing 2.5px

		&::before
			position absolute
			top 57%
			left 50%
			width em(104, 60)
			height 1px
			content ''
			background-color #000
			opacity .2
			transform translateX(-50%)

	&__title
		margin-bottom em(33, 36)
		margin-left em(69, 36)
		font-family $helvetica-cyr
		font-size em(36)
		font-weight 300
		line-height em(24, 36)
		letter-spacing 2.5px
		word-spacing -2.7px

		& span
			letter-spacing 1.5px

	&__desc
		margin-left em(72, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 300
		line-height (24/14)
		letter-spacing .4px
