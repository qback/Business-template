.company
	padding-top em(66)
	padding-bottom em(63)
	background-color #fbfdfe

	+below(450px)
		font-size rem(12)

	&__wrapper
		wrapper()

		+below(450px)
			padding-x 10px

	&__figure
		margin-right prc(45/1100)
		display inline-block
		width prc(540/1100)
		max-width em(540)
		vertical-align top

		+below(1140px)
			margin-right prc(33/1100)

		+below(1000px)
			margin-x auto
			margin-bottom em(30)
			display block
			width auto

	&__img
		width 100%
		max-width 100%
		height auto

	&__text
		margin-top em(30)
		padding-right prc(96/1100)
		padding-left prc(19/1100)
		display inline-block
		width prc(510/1100)
		max-width em(510)
		vertical-align top

		+below(1000px)
			margin 0 auto
			padding-right 0
			padding-left 0
			display block
			width auto

	&__number
		position relative
		margin-bottom em(13, 60)
		display inline-block
		font-family $raleway
		font-size em(60)
		font-weight 300
		line-height (60/60)
		letter-spacing em(2.5, 60)

		&::before
			position absolute
			top 57%
			left 50%
			width em(104, 60)
			height 1px
			content ''
			background-color #000
			opacity .2
			transform translateX(-50%)

	&__title
		margin-bottom em(19, 36)
		margin-left em(69, 36)
		font-family $helvetica-cyr
		font-size em(36)
		font-weight 300
		line-height (36/24)
		letter-spacing em(2.5, 36)
		word-spacing em(-2.7, 36)

		& span
			letter-spacing em(1.5, 36)

	&__desc
		margin-left em(72, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 300
		line-height (24/14)
		letter-spacing em(.4, 14)

		+below(1000px)
			padding-right em(10, 14)
