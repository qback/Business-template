.header
	position relative
	z-index 3
	padding-top em(63)
	min-height em(99)
	background-color #fff
	transition transform .4s

	+below(1000px)
		text-align center

	&_is-shifted
		transform translateX(em(-200))

	&__wrapper
		wrapper()

	&__logo
		font-family $raleway
		font-size em(42)
		font-weight 700
		line-height (24/42)
		text-decoration none
		text-transform lowercase
		letter-spacing 4.1px
		color #000

		+below(1000px)
			margin-left em(-80, 42)

	&__list
		float right

		+below(1000px)
			display none

	&__item
		margin-top em(-1)
		margin-left em(40)
		float left

		&_last
			margin-right em(-2)
			margin-left em(39)

		&_custom-margin
			margin-left em(45)

	&__link
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 300
		line-height (24/14)
		text-decoration none
		text-transform uppercase
		letter-spacing .6px
		color #000

		// fix for css jitter
		&::after
			margin-bottom -1px
			display block
			visibility hidden
			overflow hidden
			height 1px
			font-weight bold
			content attr(title)
			color transparent

		&:hover
			padding-bottom em(15, 14)
			font-weight 500
			border-bottom 2px solid #000

	&__trigger
		position absolute
		right 20px
		bottom 0
		display none
		width 50px
		height 50px
		border 1px solid #e7e7e7

		+below(1000px)
			display block

	&__icon
		position absolute
		top 50%
		left 50%
		width 18px
		height 2px
		background-color #000
		transform translate(-50%, -50%)

		&::before
		&::after
			position absolute
			left 0
			width 100%
			height 100%
			content ''
			background-color inherit

		&::before
			bottom 5px

		&::after
			top 5px

		&_is-clicked
			background-color white

			&::before
				bottom 0
				transform rotate(45deg)
				background-color #000

			&::after
				top 0
				transform rotate(-45deg)
				background-color #000
