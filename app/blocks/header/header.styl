.header
	position relative
	z-index 3
	padding-top 63px
	height 99px
	background-color #fff
	transition transform .4s

	&_is-shifted
		transform translateX(-260px)

	&__wrapper
		wrapper()

	&__logo
		font-family $raleway
		font-size 42px
		font-weight 700
		line-height (24/42)
		text-decoration none
		text-transform lowercase
		letter-spacing 4.1px
		color #000

	&__list
		float right

		+below(1000px)
			display none

	&__item
		margin-top -1px
		margin-left 40px
		float left

		&_last
			margin-right -2px
			margin-left 39px

		&_custom-margin
			margin-left 45px

	&__link
		font-family $helvetica-cyr
		font-size 14px
		font-weight 300
		line-height (24/14)
		text-decoration none
		text-transform uppercase
		letter-spacing .6px
		color #000

		// fix for css jitter
		&::after
			margin-bottom -1px
			display block
			visibility hidden
			overflow hidden
			height 1px
			font-weight bold
			content attr(title)
			color transparent

		&:hover
			padding-bottom 15px
			font-weight 500
			border-bottom 2px solid #000

	&__trigger
		position absolute
		right 20px
		bottom 0
		display none
		width 50px
		height 50px
		border 1px solid #000

		+below(1000px)
			display block

	&__icon
		position absolute
		top 50%
		left 50%
		width 18px
		height 2px
		background-color #000
		transform translate(-50%, -50%)

		&::before
		&::after
			position absolute
			left 0
			width 100%
			height 100%
			content ''
			background-color inherit

		&::before
			bottom 5px

		&::after
			top 5px

		&_is-clicked
			background-color white

			&::before
				bottom 0
				transform rotate(45deg)
				background-color #000

			&::after
				top 0
				transform rotate(-45deg)
				background-color #000
