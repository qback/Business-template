.mission
	padding-top 69px
	padding-right 20px
	padding-left 74px
	width 100%
	color #fff

	&__number
		position relative
		margin-bottom 26px
		display inline-block
		font-family $raleway
		font-size 60px
		font-weight 300
		line-height 60px
		letter-spacing 2.5px

		&::before
			position absolute
			top 58%
			left 50%
			width 104px
			height 1px
			content ''
			background-color #fff
			opacity .2
			transform translateX(-50%)


	&__title
		margin-bottom 22px
		margin-left 61px
		font-family $helvetica-cyr
		font-size 36px
		font-weight 300
		line-height 24px
		letter-spacing 2.5px
		word-spacing -1.5px

		& span
			letter-spacing 1.5px

	&__desc
		margin-left 65px
		font-family $helvetica-cyr
		font-size 14px
		font-weight 200
		line-height 24px
		letter-spacing .8px


