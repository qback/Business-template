.mission
	padding-top em(69)
	padding-right em(20)
	padding-left em(74)
	color #fff

	&__number
		position relative
		margin-bottom em(26, 60)
		display inline-block
		font-family $raleway
		font-size em(60)
		font-weight 300
		line-height (60/60)
		letter-spacing em(2.5, 60)

		&::before
			position absolute
			top 58%
			left 50%
			width em(104, 60)
			height 1px
			content ''
			background-color #fff
			opacity .2
			transform translateX(-50%)


	&__title
		margin-bottom em(22, 36)
		margin-left em(61, 36)
		font-family $helvetica-cyr
		font-size em(36)
		font-weight 300
		line-height (24/36)
		letter-spacing (2.5, 36)
		word-spacing em(-1.5, 36)

		& span
			letter-spacing em(1.5, 36)

	&__desc
		margin-left em(65, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 200
		line-height (24/14)
		letter-spacing em(.8, 14)

		+below(450px)
			font-weight 300


