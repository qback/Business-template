.nav
	position fixed
	z-index 1
	top 0
	right 0
	padding-top 47px
	visibility hidden
	overflow-y auto
	width 260px
	height 100%
	transition transform .4s 0s, visibility 0s .4s
	transform translateX(80px)

	&_open
		visibility visible
		transition transform .4s 0s, visibility 0s 0s
		transform translateX(0)

	&__list
		text-align center

	&__link
		padding-y 15px
		display block
		font-family $helvetica-cyr
		font-size 14px
		font-weight 300
		line-height (24/14)
		text-decoration none
		text-transform uppercase
		letter-spacing .6px
		color #000

