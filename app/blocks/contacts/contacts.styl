.contacts
	padding-top em(46)
	padding-bottom em(62)
	display block
	background-color #fbfdfe

	+below(450px)
		font-size rem(12)

	&__wrapper
		wrapper()
		clearfix()

		+below(450px)
			padding-x 10px

	&__column

		&_map-container
			float left
			width prc(560/1100)
			max-width em(560)

			+below(1000px)
				margin-x auto
				margin-bottom em(50)
				padding-left 0
				float none
				width auto

		&_form-container
			float right
			width prc(460/1100)
			max-width em(460)

			+below(1000px)
				margin 0 auto
				float none
				width auto

			+below(450px)
				font-size rem(13)

	&__text
		margin-bottom em(45)
		padding-left prc(19/560)

		+below(1000px)
			padding-left 0

	&__number
		position relative
		margin-bottom em(13, 60)
		display inline-block
		font-family $raleway
		font-size em(60)
		font-weight 300
		line-height (60/60)
		letter-spacing em(2.5, 60)

		&::before
			position absolute
			top 57%
			left 50%
			width em(104, 60)
			height 1px
			content ''
			background-color #000
			opacity .2
			transform translateX(-50%)

	&__title
		margin-bottom em(19, 36)
		margin-left em(69, 36)
		font-family $helvetica-cyr
		font-size em(36)
		font-weight 300
		line-height (36/24)
		letter-spacing em(2.5, 36)
		word-spacing em(-2.7, 36)

		& span
			letter-spacing em(1.7, 36)

	&__desc
		margin-left em(72, 14)
		padding-right em(40, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 300
		line-height (24/14)
		letter-spacing em(.4, 14)

		+below(1000px)
			padding-right em(10, 14)

	&__map
		width 100%
		height em(299)
		background grey
