.services

	&__column
		margin-right prc(30/400)
		vertical-align top
		float left

		&_last
			margin-right 0
			float right

	&__figure
		position relative
		margin-bottom em(26)

		&_last
			margin-bottom 0

	&__img
		width 100%
		height auto

	&__caption
		position absolute
		left em(18, 14)
		bottom em(15, 14)
		font-family $helvetica-cyr
		font-size em(14)
		font-weight 200
		line-height (18/14)
		letter-spacing .6px
		color #fff
